.tick-boxes
  width: 30px;
  height: 30px;
  position: relative;
  margin: 20px auto;

  &__label
    width: 30px;
    height: 30px;
    position: absolute;
    top: 4px;
    left: 4px;
    cursor: pointer;
    background #F3E2C4
    border-radius: 50px;

    &:after
      content: '';
      width: 12px;
      height: 6px;
      position: absolute;
      top: 9px;
      left: 7px;
      border: 3px solid #CBBDA4;
      border-top: none;
      border-right: none;
      background: transparent;
      opacity: 1;
      transform: rotate(-45deg);

#tick-boxes
  display none

  &:checked + .tick-boxes__label
    background-color #6FB48D

  &:checked + .tick-boxes__label:after
    border-color #FFFCD9
