.arrow-button-turquoise
  width 45px
  height 45px
  display inline-block
  border-radius 50%
  background-color #4eb7a8

  &__prev
    display block
    border-right 3px solid #FFF
    border-bottom 3px solid #FFF
    transform: rotate(-40deg)
    width 15px
    height 15px
    margin 12px 10px

  &__next
    display block
    border-left 3px solid #FFF
    border-bottom 3px solid #FFF
    transform rotate(40deg)
    width 15px
    height 15px
    margin 12px 10px