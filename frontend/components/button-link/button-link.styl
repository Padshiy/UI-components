.button-link
  width 100%
  display block
  position relative
  border none
  outline none
  cursor pointer
  overflow hidden
  box-sizing border-box
  text-transform uppercase
  background-color inherit
  color inherit
  text-decoration none
  padding .2em .5em

  &__ripple-effect
    display block
    position absolute
    background rgba(255, 255, 255, 0.3)
    border-radius 100%
    transform scale(0)

  &__ripple-animate
    animation ripple 0.65s linear

@keyframes ripple
  100% {opacity: 0; transform: scale(2.5);}