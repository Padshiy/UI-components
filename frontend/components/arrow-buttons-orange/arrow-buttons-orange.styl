.arrow-button-orange
  width 50px
  height 50px
  display inline-block
  border-radius 50%
  background-color #F3E2C4
  margin-left 4px
  margin-right 20px

  &__prev
    display block
    border-right 3px solid #fff
    border-bottom 3px solid #fff
    transform: rotate(-40deg)
    width 15px
    height 15px
    margin-top 16px
    margin-left 12px

  &__next
    display block
    border-left 3px solid #fff
    border-bottom 3px solid #fff
    transform rotate(40deg)
    width 15px
    height 15px
    margin-top 17px
    margin-left 20px