.button
  position relative
  border none
  outline none
  cursor pointer
  overflow hidden
  box-sizing border-box
  text-transform uppercase

  &-orange
    background-color #fff
    box-shadow 0px 5px 7px 0px rgba(187, 64, 28, 1)
    color #e75735
    border 1px solid #e75735

    &:hover
    &[data-button="hover"]
      color #ffffff
      background-color #e75735

    &:active
    &[data-button="active"]
      color #ffffff
      background-color #e75735
      box-shadow none
      border none

  &-turquoise
    background-color #fff
    box-shadow 0px 5px 7px 0px rgba(86, 160, 122, 1)
    color #4eb7a8
    border 1px solid #4eb7a8

    &:hover
    &[data-button="hover"]
      background-color #4eb7a8
      color #fff

    &:active
    &[data-button="active"]
      background-color #4eb7a8
      color #fff
      box-shadow none
      border none

  &-small
    padding 5px 16px
    margin-right 16px
    vertical-align bottom
    font-size 0.7em
    margin-left 6px
    border-radius 3px

  &-big
    margin-left 3px
    margin-right 20px
    padding 7px 32px
    border-radius 3px
    font-size 0.76em

  &__ripple-effect
    display block
    position absolute
    background rgba(255, 255, 255, 0.3)
    border-radius 100%
    transform scale(0)

  &__ripple-animate
    animation ripple 0.65s linear

@keyframes ripple
  100% {opacity: 0; transform: scale(2.5);}