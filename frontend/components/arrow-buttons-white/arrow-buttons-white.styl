.arrow-button-white
  width 45px
  height 45px
  display inline-block
  border-radius 50%
  border 3px solid #4eb7a8
  margin-left 16px
  margin-right 8px

  &__prev
    display block
    border-right 3px solid #4eb7a8
    border-bottom 3px solid #4eb7a8
    transform: rotate(-45deg)
    width 15px
    height 15px
    margin 14px 9px

  &__next
    display block
    border-left 3px solid #4eb7a8
    border-bottom 3px solid #4eb7a8
    transform rotate(45deg)
    width 15px
    height 15px
    margin 14px 18px