.drop-down
  display block
  border-radius 3px
  overflow hidden
  height 34px
  width 19em
  position relative

  &:after
    content '\003c'
    width 6%
    height 100%
    position absolute
    top 0
    right  0
    border-top none
    border-right none
    background #4eb7a8
    color #fff
    opacity 1
    transform rotate(-90deg)

  &__select
    border-radius 3px
    background #e5e5e5
    color #888888
    height 34px
    padding 5px
    border 0
    font-size 16px
    line-height 1
    appearance none
    width 100%

    &_option
      display block